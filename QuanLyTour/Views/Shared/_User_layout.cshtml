<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My Cool Tour</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
          rel="stylesheet">
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/bootstrap.min.css")
    @Styles.Render("~/Content/Site.css")
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">

        <div class="container">
            @Html.ActionLink("MCT", "Index", "Home", null, new { @class="navbar-brand"})
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        @Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Tours", "Index", "Tours", null, new { @class = "nav-link" })
                    </li>
                </ul>
                <div class="form-inline my-2 my-lg-0">
                    @using (Html.BeginForm("Search", "Home", FormMethod.Get, new { @class = "form-inline" }))
        {
            @Html.TextBox("q", null, new { @class = "form-control mr-sm-2" })
            <button type="submit" class="btn btn-outline-success my-2 my-sm-0">Find tours</button>
}
                <ul class="navbar-nav">
                        @if (Session["UserName"] != null && Session["UserEmail"] != null)
                        {
                            @Html.ActionLink(@Session["UserName"].ToString(), "Home", "User", null, new { @class = "nav-link" });
                            @Html.ActionLink("Log out", "LogOut", "User", null, new { @class = "nav-link" });
                        }
                        else
                        {
                            @Html.ActionLink("Sign In/Sign Up", "SignIn", "User", null, new { @class = "nav-link" });
                        }
                    </ul>
                </div>
            </div>
        </div>
    </nav>

    <div class="container">
        @RenderBody()

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/Scripts/bootstrap.min.js")
    @RenderSection("scripts", required: false)
</body>
</html>
