@model QuanLyTour.Models.User

@{
    ViewBag.Title = "SignUp";
    Layout = "~/Views/Shared/_User_layout.cshtml";
}
<style>
    .input-group {
        margin-bottom: 1rem;
    }

    .txt-center {
        text-align: center;
    }

    .display-huge {
        font-size: 5rem;
    }

    .has-error {
        color: red;
    }
</style>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-6 d-md-block" style="display: block; margin: auto;">
            <h1 class="txt-center text-info"><i class="material-icons display-huge">account_circle</i></h1>
            <h2 class="display-4 txt-center">Sign Up</h2>
            @using (Html.BeginForm("SignUp", "User", FormMethod.Post, new { @class = "form-group" }))
    {
        <div class="input-group">
            <div class="input-group">
                <span class="" id="basic-addon1">User name</span>
            </div>
            @Html.TextBox("Name", null, new { @class = "form-control" })
        </div>
        <div class="input-group">
            <div class="input-group">
                <span class="" id="basic-addon1">Address</span>
            </div>
            @Html.TextBox("Address", null, new { @class = "form-control" })
        </div>
        <div class="input-group">
            <div class="input-group">
                <span class="" id="basic-addon1">Phone</span>
            </div>
            @Html.TextBox("PhoneNumber", null, new { @class = "form-control" })
        </div>
        <div class="input-group">
            <div class="input-group">
                <span class="" id="basic-addon1">Email</span>
            </div>
            @Html.TextBox("Email", null, new { @type = "email", @class = "form-control" })
        </div>
        <div class="input-group">
            <div class="input-group">
                <span class="" id="">Password</span>
            </div>
            @Html.Password("Password", null, new { @class = "form-control password" })
        </div>
        <div class="input-group">
            <div class="input-group">
                <span class="" id="">Repeat password</span>
            </div>
            @Html.Password("Repeat_password", null, new { @class = "form-control password" })
        </div>
        <div>
            <p class="has-error">@ViewBag.error</p>
        </div>
        <button type="submit" class="form-control btn btn-primary">Sign up</button>
        <br />
        <p class="lead text-center">or</p>
}
            @Html.ActionLink("Sign in here", "SignIn", "User", null, new { @class = "form-control btn btn-outline-secondary" })

        </div>
    </div>

</div>

