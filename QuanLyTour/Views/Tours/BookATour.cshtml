@model QuanLyTour.Models.TourGroup

@{
    ViewBag.Title = "Book " + Model.Name;
    Layout = "~/Views/Shared/_User_layout.cshtml";
}

<h1>Book this tour</h1>
<h2 class="display-4">@Model.Name</h2>
<p>Tour: @ViewBag.tour.TourName</p>
<p>
    Price per ticket:  @{
        var totalMoney = (double.Parse(ViewBag.tour.TourPrice));
        var Money = totalMoney.ToString("C", new System.Globalization.CultureInfo("en-US"));
    }
    @Money
</p>
<p>Leave date: @Model.LeaveDate</p>
<p>Return date: @Model.ReturnDate</p>
<p>
    Tickets:
    @using (Html.BeginForm("selectNumberOfTicket", "Tours", FormMethod.Post))
    {
    <input type="text" name="id" value=@ViewBag.tour.ID hidden />
    <input type="text" name="groupId" value=@Model.ID hidden />
    <input type="text" name="userId" value=@Session["UserID"] hidden />
    <div class="row">
        <select name="numberOfTicket" class="form-control col-md-4">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
            <option value="6">6</option>
            <option value="7">7</option>
            <option value="8">8</option>
            <option value="9">9</option>
            <option value="10">10</option>
        </select>
        <input type="submit" value="Confirm" class="btn btn-info col-md-1" />
    </div>
    }
</p>
<br />
<h3>User info:</h3>
<p>User name: @Session["UserName"].ToString()</p>
<p>Email: @Session["UserEmail"].ToString()</p>
<br />
<p>Notes: You have to pay the fee for the next 7 days or your booking will be cancelled automatically.</p>
